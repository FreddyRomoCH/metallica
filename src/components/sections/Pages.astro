---
import Layout from "../../layouts/Layout.astro";
import Footer from "../footer/Footer.astro";

const { title, subtitle } = Astro.props;

let positionFooter = "relative";

if (title === "error-404") {
  positionFooter = "absolute";
}
---

<Layout title={title}>
  <main>
    <header class="relative w-full text-center mt-36 mb-16 px-6 sm:px-36">
      <h2 class="text-white text-4xl font-medium my-5 mb-14 rock-font">
        {title}
      </h2>
      <p class="text-white text-base font-light">{subtitle}</p>
    </header>

    <section class="relative text-white text-center overflow-hidden">
      <!-- Albums Page Slot -->
      <slot name="albums" />
      <!-- Members Page Slot -->
      <slot name="members" />
      <!-- Statistics Page Slot -->
      <slot name="statistics" />
      <!-- Statistics Page Slot -->
      <slot name="error-404" />
    </section>
    <Footer position={positionFooter} />
  </main>
</Layout>

<style>
  .rock-font {
    font-family: "Rock Salt", "proxima-nova", system-ui, sans-serif;
    font-weight: 400;
    font-style: normal;
  }
</style>
